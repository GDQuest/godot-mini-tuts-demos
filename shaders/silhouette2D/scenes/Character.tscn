code = "shader_type canvas_item;
uniform vec4 silhouette_color : hint_color;
uniform float width : hint_range(0.0, 16.0);

void fragment() {
	vec4 screen_color = texture(SCREEN_TEXTURE, SCREEN_UV);
	vec4 tex_color = texture(TEXTURE, UV);
	COLOR = tex_color;
	if (screen_color.r < 10.0){
		COLOR.rgb = silhouette_color.rgb;
		
		vec2 size = vec2(width) / vec2(textureSize(TEXTURE, 0));
   
  		  float alpha = tex_color.a;
 	alpha += texture(TEXTURE, UV + vec2(0.0, -size.y)).a;
    alpha += texture(TEXTURE, UV + vec2(size.x, -size.y)).a;
    alpha += texture(TEXTURE, UV + vec2(size.x, 0.0)).a;
    alpha += texture(TEXTURE, UV + vec2(size.x, size.y)).a;
    alpha += texture(TEXTURE, UV + vec2(0.0, size.y)).a;
    alpha += texture(TEXTURE, UV + vec2(-size.x, size.y)).a;
    alpha += texture(TEXTURE, UV + vec2(-size.x, 0.0)).a;
    alpha += texture(TEXTURE, UV + vec2(-size.x, -size.y)).a;
	
	if (alpha >= 9.0) alpha = 0.0;
   
    vec4 final_color = silhouette_color;
    COLOR = vec4(final_color.rgb, clamp(alpha, 0.0, 1.0)*tex_color.a);
	}
}"

